general {
	colors = true
	interval = 5
	color_good = "#2AA198"
	color_bad = "#586E75"
	color_degraded = "#DC322F"
}

order += "cpu_usage"
order += "disk /"
order += "wireless wlp1s0"
order += "ethernet _first_"
#order += "load"
#order += "memory"
order += "battery all"
order += "volume master"
order += "tztime local"

cpu_usage {
	format = "ðŸ’» %usage "
}

load {
	format = " load %1min "
	#format = "[ load: %1min, %5min, %15min ]"
	#max_threshold = 0.3
}

disk "/" {
	#format = " hdd %avail "
	format = " ðŸ’¾ %avail "
}

wireless wlp1s0 {
	format_up = " W: (%quality  %ip) "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
	format_up = " lan: %ip %speed "
	format_down = " no lan "
}

battery all {
	format = "%status %percentage %remaining %emptytime"
	#format = " %status %percentage "
	format_down = "No battery"
	last_full_capacity = true
	integer_battery_capacity = true
	#status_chr = "ï‡¦"
	status_chr = "âš¡"
	#status_bat = "bat"
	#status_bat = "â˜‰"
	status_bat = "ïˆ“"
	status_unk = "ðŸ”‹"
	#status_unk = ""
	status_full = "ðŸ”‹"
	low_threshold = 15
	threshold_type = time
}

memory {
	format = " ðŸ§  %used / %available "
	threshold_degraded = "1G"
	format_degraded = "MEMORY < %available"
}

